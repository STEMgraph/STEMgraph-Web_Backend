services:
  stemgraph-api:
    build: .
    env_file: .env
    expose:
      - "8000"
    volumes:
      - graph-db:/graph-db
    restart: unless-stopped
    networks:
      frontproxy_fnet:
        ipv4_address: 172.20.20.30
      backend:

volumes:
  graph-db:

networks:
  frontproxy_fnet:
    external: true
  backend:
    name: stemgraph-api_backend
    driver: bridge
    driver_opts:
      com.docker.network.enable_ipv6: "false"
